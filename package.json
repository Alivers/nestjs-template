    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
